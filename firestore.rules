rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAllowlistedAdminEmail() {
      return request.auth != null && (
        request.auth.token.email == "will_jackson@icloud.com" ||
        request.auth.token.email == "stormij.xo@gmail.com"
      );
    }
    function isAdmin() {
      return request.auth != null && (
        isAllowlistedAdminEmail() ||
        exists(/databases/$(database)/documents/admin_users/$(request.auth.uid))
      );
    }
    // members: list of subscribers (admin reads/writes; success page can create)
    match /members/{memberId} {
      allow read, update, delete: if request.auth != null;
      allow create: if true;
    }
    // site_config: landing content (public read for landing page; only admin write)
    match /site_config/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // tips: logged from Stripe webhook; readable in admin dashboard
    match /tips/{tipId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    // purchases: treat/store purchases from Stripe webhook; admin can update (schedule); members read own by email
    match /purchases/{purchaseId} {
      allow read: if request.auth != null && (
        resource.data.email == request.auth.token.email ||
        isAdmin()
      );
      allow create: if false;
      allow update: if isAdmin();
      allow delete: if false;
    }
    // admin_users: staff with roles (e.g. admin); who can access admin panel
    match /admin_users/{userId} {
      allow read, write: if request.auth != null;
    }
    // users: member profiles; read own doc; admin can read all (e.g. to start DMs)
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        isAdmin()
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // usernames: taken usernames (doc ID = lowercase username); public read for availability check
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    // posts: member feed posts; read for auth'd members; admin write (via custom claims/allowlist)
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // post likes: users can add/remove own like
    match /posts/{postId}/likes/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
      allow update: if false;
    }
    // user bookmarks: users can manage own saved posts
    match /users/{userId}/bookmarks/{postId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // mediaLibrary: folder config for admin media library (authenticated read/write)
    match /mediaLibrary/{docId} {
      allow read, write: if request.auth != null;
    }
    // treats: store treat cards; anyone can read (store listing); only authenticated can write (admin); webhook updates quantity via Admin SDK
    match /treats/{treatId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // treatSchedules: scheduled treat fulfillments (from purchases or manual); admin writes; members read own (by memberEmail)
    match /treatSchedules/{scheduleId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    // notifications: in-app notifications for admin and members
    // forMemberEmail is stored lowercase; match token email, email_lower claim, or users/{uid}.email_lower (synced on sign-in)
    match /notifications/{notificationId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (resource.data.forAdmin == true && isAdmin()) ||
        (resource.data.forMemberEmail != null && (
          resource.data.forMemberEmail == request.auth.token.email ||
          (request.auth.token.email_lower != null && resource.data.forMemberEmail == request.auth.token.email_lower) ||
          (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && resource.data.forMemberEmail == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email_lower)
        )) ||
        isAdmin()
      );
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    // DMs: 1:1 conversations; conversation doc id = member uid; admin can read/write any, member only own.
    // If you get "Missing or insufficient permissions" on DMs: ensure your admin uid has a doc in admin_users (e.g. admin_users/<your-uid> with role: "admin", email: "your@email.com").
    match /conversations/{convId} {
      allow read, write: if request.auth != null && (
        convId == request.auth.uid ||
        isAdmin()
      );
    }
    match /conversations/{convId}/messages/{msgId} {
      allow read, write: if request.auth != null && (
        convId == request.auth.uid ||
        isAdmin()
      );
    }
    // Premium Studio usage (caption/AI daily limits); server-only write via Admin SDK
    match /studio_caption_usage/{docId} {
      allow read, write: if false;
    }
    // studioSettings: AI Training (creator personality, sliders); admin reads/writes own
    match /studioSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /studio_ai_usage/{docId} {
      allow read, write: if false;
    }
    // chatSessions: scheduled live chat; admin creates when scheduling a chat-session purchase; member reads own by email
    match /chatSessions/{sessionId} {
      allow read: if request.auth != null && (
        resource.data.memberEmail == request.auth.token.email ||
        (request.auth.token.email_lower != null && resource.data.memberEmail == request.auth.token.email_lower) ||
        isAdmin()
      );
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (
        request.auth != null &&
        resource.data.memberEmail == request.auth.token.email &&
        request.resource.data.conversationId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['conversationId', 'updatedAt'])
      );
    }
    // mediaUnlocks: which user unlocked which DM locked media; written by server (webhook); member reads own; admin reads all (for spend tracking)
    match /mediaUnlocks/{unlockDocId} {
      allow read: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin());
      allow write: if false;
    }
    // postUnlocks: feed/post paid unlocks; written by server (webhook); admin reads all (for spend tracking)
    match /postUnlocks/{unlockId} {
      allow read: if request.auth != null && (resource.data.uid == request.auth.uid || resource.data.email == request.auth.token.email || isAdmin());
      allow write: if false;
    }
  }
}
