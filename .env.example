# Firebase (for Next.js app login/auth). Copy to .env.local and fill in.
# Same values as FIREBASE_* used by scripts/generate-firebase-config.js;
# NEXT_PUBLIC_ prefix is required so the client can read them.
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# Optional
# NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Stripe (subscription checkout, tips, customer portal, webhook)
# Get keys from Stripe Dashboard → Developers → API keys.
STRIPE_SECRET_KEY=sk_live_xxx
# Subscription: use your existing recurring price ID (Dashboard → Products → [Your product] → Price → id starts with price_)
STRIPE_PRICE_ID_MONTHLY=price_xxx
# Webhook (Dashboard → Developers → Webhooks → Add endpoint → signing secret)
STRIPE_WEBHOOK_SECRET=whsec_xxx
# Optional: used by tip-checkout and customer-portal
# PUBLIC_APP_URL=https://stormijxo.com
